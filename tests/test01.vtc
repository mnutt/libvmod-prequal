varnishtest "Test prequal director backend selection and health"

server s00 -repeat 2 -listen 127.0.0.1:8080 {
	rxreq
	txresp -body "server0"
} -start

server s01 -repeat 10 -listen 127.0.0.1:8081 {
	rxreq
	txresp -body "server1"
} -start

varnish v1 -vcl+backend {
	import prequal from "${vmod}";
	import std;

	sub vcl_init {
		new dir = prequal.director();
		dir.add_backend(s00);
		dir.add_backend(s01);
	}

	sub vcl_recv {
		set req.backend_hint = dir.backend();
		set req.http.backend_name = req.backend_hint;
		return(pass);
	}

	sub vcl_deliver {
		set resp.http.healthy = dir.healthy();
	}
} -start

client c1 {
	txreq
	rxresp
	expect resp.http.healthy == "true"
	expect resp.status == 200
	expect resp.body ~ "server[01]"
} -run

client c2 {
	txreq
	rxresp
	expect resp.http.healthy == "true"
	expect resp.status == 200
	expect resp.body ~ "server[01]"
} -run

